# 🔧 Variables de entorno para Deno Oracle Proxy
# Copia este archivo como .env y modifica los valores según tu configuración

# 🌍 Configuración del servidor
PORT=8003
NODE_ENV=development

# 📝 Configuración de logging
LOG_DIR=./logs
LOG_FILE=proxy.log
LOG_LEVEL=INFO
LOG_MAX_SIZE=5242880
LOG_MAX_BACKUPS=10
LOG_CONSOLE=true

# 📊 Configuración de SQL logging
SQL_LOG_DIR=./logs
SQL_LOG_FILE=sql-inserts.log
SQL_LOG_MAX_SIZE=52428800
SQL_LOG_MAX_BACKUPS=15

# 🎯 API destino para reenvío automático (retrocompatibilidad)
DESTINATION_URL=http://10.6.46.114:8083/exec
DESTINATION_METHOD=POST
DESTINATION_AUTH=Bearer demo

# 🎯 Múltiples destinos por endpoint específico
# Para /api/oracle/convert
ORACLE_API_URL=http://10.6.46.114:8083/exec
ORACLE_API_TOKEN=Bearer demo

# Para /api/oracle/batch
BATCH_API_URL=http://10.6.46.114:8081/batch
BATCH_API_TOKEN=Bearer batch-token

# Para /api/validate
VALIDATION_API_URL=http://10.6.46.114:8082/validate
VALIDATION_API_TOKEN=Bearer validation-token

# Para /api/health (distribuido)
HEALTH_API_URL=http://10.6.46.114:8080/health

# 🆕 NUEVOS ENDPOINTS - Agrega los tuyos aquí:
# Para /api/reports (ejemplo)
REPORTS_API_URL=http://10.6.46.114:8084/reports
REPORTS_API_TOKEN=Bearer reports-token

# Para /api/analytics (ejemplo)
ANALYTICS_API_URL=http://analytics-server:9000/analyze
ANALYTICS_API_TOKEN=Bearer analytics-token

# Para /api/backup (ejemplo)
BACKUP_API_URL=http://backup-server:7000/backup
BACKUP_API_TOKEN=Bearer backup-token

# 🔐 Tokens de autenticación por API
API_8081_TOKEN=Bearer tu-token-especifico-aqui
EMPRESA_API_TOKEN=Bearer your-token-here

# Ejemplos de configuración por ambiente:
# 
# DESARROLLO:
# NODE_ENV=development
# PORT=8003
# LOG_LEVEL=DEBUG
# LOG_CONSOLE=true
# ORACLE_API_URL=http://localhost:8083/exec
# BATCH_API_URL=http://localhost:8081/batch
# REPORTS_API_URL=http://localhost:8084/reports
#
# PRODUCCIÓN:
# NODE_ENV=production
# PORT=8080
# LOG_LEVEL=INFO
# LOG_CONSOLE=false
# ORACLE_API_URL=https://api.produccion.com/exec
# ORACLE_API_TOKEN=Bearer token-produccion-real
# BATCH_API_URL=https://batch.produccion.com/batch
# BATCH_API_TOKEN=Bearer batch-token-real
# REPORTS_API_URL=https://reports.produccion.com/api
# REPORTS_API_TOKEN=Bearer reports-token-real
#
# TESTING:
# NODE_ENV=testing
# PORT=0
# LOG_LEVEL=ERROR
# LOG_CONSOLE=false